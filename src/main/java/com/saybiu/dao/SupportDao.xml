<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.saybiu.dao.SupportDao">

    <!-- Support: 结果映射-->
    <resultMap id="SupportOperation" type="com.saybiu.domain.Support">
        <id column="support_id" property="supportId"/>
        <result column="user_support_id" property="userSupportId"/>
        <result column="user_support_nickname" property="userSupportNickname"/>
        <result column="user_supported_id" property="userSupportedId"/>
        <result column="user_supported_nickname" property="userSupportedNickname"/>
    </resultMap>
    <insert id="insertSupport">
        insert into bbs_supports (user_support_id, user_support_nickname, user_supported_id, user_supported_nickname) values (#{userSupportId},#{userSupportNickname},#{userSupportedId},#{userSupportedNickname})
    </insert>
    <select id="selectSupportByEachUserId" resultType="java.lang.Integer">
        select count(*) from bbs_supports where user_support_id=#{userId} and user_supported_id=#{beSupportedUserId}
    </select>
</mapper>
