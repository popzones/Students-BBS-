<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.saybiu.dao.UserDao">


    <!-- User: 结果映射 -->
    <resultMap id="UserOperation" type="com.saybiu.domain.User">
        <id column="user_id" property="userId" />
        <result column="user_phone" property="userPhone"/>
        <result column="user_password" property="userPassword"/>
        <result column="user_muted" property="userMuted"/>
        <result column="user_create_time" property="userCreateTime"/>
        <result column="user_update_time" property="userUpdateTime"/>
        <result column="user_register_ip" property="userRegisterIp"/>
    </resultMap>

    <select id="login" resultMap="UserOperation">
        select  user_id, user_phone, user_password, user_muted, user_create_time, user_update_time, user_register_ip
        from bbs_users where user_id = #{userId}
    </select>
</mapper>
